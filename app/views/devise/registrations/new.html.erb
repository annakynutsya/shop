<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "reg-form-container"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.input :first_name, input_html: { class: "reg-form-field"} %>
   <%= f.input :last_name, input_html: { class: "reg-form-field"} %>
  <%= f.input :phone, input_html: { class: "reg-form-field"} %>
  <%= f.input :email, input_html: { class: "reg-form-field"} %>
  <%= f.input :password, input_html: { class: "reg-form-field"} %>
  <%= f.input :password_confirmation, input_html: { class: "reg-form-field"} %>
  <%= f.button :submit, 'Sign up', class: "btn-blue my-4 w-20 mx-auto" %>
<% end %>
