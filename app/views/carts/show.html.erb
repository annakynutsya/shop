<% if @cart_products.present? %>
  <div class="table-container">
    <table class="table">
      <thead class="thead">
        <tr>
          <th scope="col" class="th">Product name</th>
          <th scope="col" class="th">Category</th>
          <th scope="col" class="th">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |product| %>
        <%= render 'shared_links/cart_product', product: product %>
        <% end %>
      </tbody>
    </table>
    <%= button_to 'Make order', new_order_path,  method: :get, class: "btn-blue bg-cyan-500 mx-96 my-6" %>
  </div>
  <% else %>
    <div class="empty-cart-container w-2/4">
      <p class="text-2xl mb-8">
        <%= "Your cart is empty. Let`s discover our assortiment!" %>
      </p>
      <%= button_to 'Show products', root_path,  method: :get, class: "h-12 btn-blue bg-cyan-500" %>
    </div>
<% end %>
