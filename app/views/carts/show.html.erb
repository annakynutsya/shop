<% if @cart_products.present? %>
  <div class=" shadow-md sm:rounded-lg w-2/4 mx-auto mt-32">
    <table class="w-full text-lg text-left text-white bg-cyan-400">
      <thead class="text-lg text-white uppercase bg-cyan-400">
        <tr>
          <th scope="col" class="px-6 py-6">Product name</th>
          <th scope="col" class="px-6 py-6">Category</th>
          <th scope="col" class="px-6 py-6">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |product| %>
        <%= render 'shared_links/cart_product', product: product %>
        <% end %>
        <%= button_to 'Make order', new_order_path,  method: :get, class: "text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl font-medium rounded-lg text-sm px-5 py-2.5 text-center mx-auto mb-2" %>
      <% else %>
        <div class="text-center mx-auto mt-64 text-white bg-pink-500 rounded-lg shadow w-5/3 lg:w-1/3 h-56 py-16">
          <p class="text-2xl mb-8">
            <%= "Your cart is empty. Let`s discover our assortiment!" %>
          </p>
          <%= button_to 'Show products', root_path,  method: :get, class: "text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl font-medium rounded-lg text-sm px-5 py-2.5 text-center mx-auto mb-2" %>
        </div>
      <% end %>
    </tbody>
  </table>
</div>
