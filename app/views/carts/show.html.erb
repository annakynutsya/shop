<div class="max-w-5xl mx-auto mt-10 ">
  <h1 class="text-4xl font-bold text-center">Shopping cart</h1>
  <h2 class="text-2xl font-semibold">Items: <%= @cart.size %></h2>
  <br>
  <div class="inline-flex flex-row flex-wrap">
  <% @cart.each do |cart_item| %>
    <br>
    <div class= "m-6 rounded-lg shadow p-9 bg-cyan-200">
      <div class="text-lg "><%= cart_item.name %></div>
      <div class="text-lg"><%= cart_item.price %></div>
      <div class="text-lg"><%= cart_item.description %></div>
      <div class="p-3 mt-4 mb-1 mr-2 font-medium text-center text-white rounded-lg shadow-lg tex1 t-lg mb-text-sm bg-gradient-to-r from-pink-400 via-pink-500 to-pink-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-pink-300 dark:focus:ring-pink-800 shadow-pink-500/50 dark:shadow-lg dark:shadow-pink-800/80"><%= button_to "Remove from cart", remove_from_cart_path(cart_item), method: :delete %></div>
    </div>
  <% end %>
  </div>
</div>
