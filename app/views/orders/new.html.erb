
<%= simple_form_for(@order, url: orders_path(@order), method: :post) do |f| %>
  <%= f.simple_fields_for :order_detail do |detail_f| %>
    <% if !user_signed_in? %>
      <%= detail_f.input :first_name %>
      <%= detail_f.input :last_name %>
      <%= detail_f.input :email %>
    <% end %>
  <%= f.simple_fields_for :adress do |adress_f| %>
    <%= adress_f.input :country %>
    <%= adress_f.input :city %>
    <%= adress_f.input :street %>
  <% end %>
  <% end %>
  <%= f.button :submit %>
<% end %>
