
<h2 class="text-center mt-24 text-2xl">Your order has been successfully placed and will be delivered within 5 days!</h2>
<h2 class="text-center mt-4 text-2xl">Your order number: <%= @order.id %></h2>
<div class="table-container">

    <table class="table">
      <thead class="thead">
        <tr>
          <th scope="col" class="px-6 py-6">Product</th>
          <th scope="col" class="px-6 py-6">Price</th>
        </tr>
      </thead>
      <tbody>
    <% @ordered_products.each do |product| %>
      <tr class="tr">
  <th scope="row" class="th">
    <%= product.name %>
  </th>
  <td class="px-6 py-4">
    <%= product.price %>
  </td>
  </tr>
    <% end %>
    </tbody>
  </table>
  <p class=' font-semibold text-white text-lg p-4 mb-2'>Total order sum: <%= @total_sum %></p>
</div>

<%= link_to 'Back to products', root_path, method: :get %>
